generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())

  name     String
  email    String @unique
  password String
  role     Role   @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}


model Cars {
  id String @id @default(uuid())

  name    String
  model   String
  year    Int
  mileage Int
  price   Float
  images  Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("cars")
}

enum Role {
  USER
  ADMIN
}
